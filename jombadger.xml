<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
	<name>COM_JOMBADGER</name>
	<author>Alain Bolli</author>
	<creationDate>14 d√©cembre 2013</creationDate>
